<?xml version="1.0"?>

<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="mpblog_author"/>
    <body>
        <referenceBlock name="page.main.title">
            <action method="setPageTitle">
                <argument translate="true" name="title" xsi:type="string">Author Information</argument>
            </action>
        </referenceBlock>
        <referenceContainer name="content">
            <block class="Geexu\Blog\Block\Author\SignupForm" name="blog_edit_form" template="author/signup.phtml" cacheable="false"/>
        </referenceContainer>
    </body>
</page>